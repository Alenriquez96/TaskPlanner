<mvc:View controllerName="task.planner.taskplanner.controller.App"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.f">
    <!-- <App id="app">
    </App> -->
    <FlexibleColumnLayout 
      id="flexibleColumnLayout"
      backgroundDesign="Solid" 
      stateChange=".onStateChanged" 
      layout="{layoutModel>/layout}">
		<beginColumnPages>
			<mvc:XMLView id="beginView" viewName="task.planner.taskplanner.view.TaskPlanner"/>
		</beginColumnPages>
		<midColumnPages>
			<mvc:XMLView id="detailView" viewName="task.planner.taskplanner.view.TaskDetail"/>
		</midColumnPages>
	</FlexibleColumnLayout>
</mvc:View>